<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/avatarLayout"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_photo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:drawableStartCompat="@drawable/ic_camera" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/accountLayout"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_edit_text"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarLayout">

        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:drawableStartCompat="@drawable/ic_green_circle" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="18dp"
                android:text="@string/value_name"
                android:textColor="@color/crayola"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/genderLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameLayout"
            android:layout_alignStart="@+id/nameLayout"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/nameLayout">

            <TextView
                android:id="@+id/icon_gender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:drawableStartCompat="@drawable/ic_female" />

            <EditText
                android:id="@+id/et_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="18dp"
                android:text="@string/value_gender"
                android:textColor="@color/crayola"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/heightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genderLayout"
            android:layout_alignStart="@+id/genderLayout"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="13dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/genderLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_height" />

            <EditText
                android:id="@+id/et_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="18dp"
                android:text="@string/value_height"
                android:textColor="@color/crayola"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heightLayout"
            android:layout_alignStart="@+id/heightLayout"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/heightLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_weight" />

            <EditText
                android:id="@+id/et_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="18dp"
                android:text="@string/value_weight"
                android:textColor="@color/crayola"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_save"
        style="@style/Button"
        android:layout_width="295dp"
        android:layout_height="45dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/text_save"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>